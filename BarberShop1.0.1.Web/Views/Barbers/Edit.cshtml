@model BarberShop1._0._1.Web.Models.Barber

@{
    ViewData["Title"] = "Düzenle";
}

<h1>Düzenle</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>







            <div class="d-flex justify-content-between">
            <div class="form-group me-3">
                <label>Hizmetler</label>
                @foreach (var service in ViewBag.Services)
                {
                    <div class="form-check">
                        <input type="checkbox" name="SelectedServiceIds" value="@service.Value" class="form-check-input" id="service_@service.Value" @(service.Selected ? "checked" : "") />
                        <label class="form-check-label" for="service_@service.Value">@service.Text</label>
                    </div>
                }
            </div>

            <div class="form-group">
                <label>Çalışma Saatleri</label>
                @foreach (var hour in ViewBag.PredefinedHours)
                {
                    <div class="form-check">
                        <input type="checkbox" name="SelectedHours" value="@hour.Value" class="form-check-input" id="hour_@hour.Value" @(hour.Selected ? "checked" : "") />
                        <label class="form-check-label" for="hour_@hour.Value">@hour.Text</label>
                    </div>
                }
            </div>

            </div>




            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
